        },
        "witness_enabled": {
          "type": "boolean",
          "format": "boolean"
        },
        "wire_encoding": {
          "type": "string"
        },
        "time_offset": {
          "type": "string",
          "format": "int64"
        },
        "time_connected": {
          "type": "string"
        },
        "starting_height": {
          "type": "integer",
          "format": "int32"
        },
        "last_block": {
          "type": "integer",
          "format": "int32"
        },
        "last_announced_block": {
          "type": "string",
          "format": "byte"
        },
        "last_ping_nonce": {
          "type": "string",
          "format": "uint64"
        },
        "last_ping_time": {
          "type": "string"
        },
        "last_ping_micros": {
          "type": "string",
